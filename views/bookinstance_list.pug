extends layout

block content
  h1= title

  ul
    each val in bookinstance_list
      li
        a(href=val.url) #{val.book.title} : #{val.imprint} -
        if val.status=='In Print'
          span.text-success #{val.status}
        else if val.status=='Out Of Print'
          span.text-danger #{val.status}
        else if val.status=='Unreleased'
          span.text-primary #{val.status}
        else if val.status=='Removed'
          span.text-warning #{val.status}
        else if val.status=='Banned'
          span.text-dark #{val.status}
        else
          span.text-warning #{val.status}

    else
      li There are no book copies in this library.